@page "/Login"
@inherits LayoutComponentBase

<PageTitle>Login/Set Up</PageTitle>
<div class="login-container">
    <div class="login-form">
        <img src="/MarylandInfoLogo.png" alt="Login Avatar" class="login-avatar" />
    </div>
<h1>Login</h1>


<div class="banner-container">
    <img src="banner2.png" alt="Banner" class="banner-image" />
</div>


<div class="login-container">
    <div class="login-form">
        <img src="/MarylandInfoLogo.png" alt="Login Avatar" class="login-avatar" />
    
    <h1>Login</h1>

    <EditForm Model="@loginModel" OnInvalidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Username</label>
            <InputText id="username" class="form-control" @bind-Value="loginModel.Username" />
            <ValidationMessage For="@(() => loginModel.Username)" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <InputText id="password" class="form-control" @bind-Value="loginModel.Password" />
            <ValidationMessage For="@(() => loginModel.Password)" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Login</button>
    </EditForm>

    <div class="text-center">
        <p>Don't have an account? <NavLink href="/signup">Register</NavLink></p>
        </div>
    </div>
</div>

