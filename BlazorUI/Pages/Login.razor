@page "/Login"
@using ElectionAppLibrary.DataAccess
@using ElectionAppLibrary.Models
@inject LoginService UserLogin
@inject NavigationManager NavigationManager
@inherits LayoutComponentBase

@inject IUserData _db

<PageTitle>Login/Set Up</PageTitle>


<div class="banner-container">
    <img src="banner2.png" alt="Banner" class="banner-image" />
    <h1 class="page-title"><b>Welcome Come Back</b></h1>
</div>


<div class="login-container">
    <div class="login-form">
        <img src="/MarylandInfoLogo.png" alt="Login Avatar" class="login-avatar" />
    
    <h1>Login</h1>

    <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Username</label>
            <InputText id="username" class="form-control" @bind-Value="loginModel.Username" />
            <ValidationMessage For="@(() => loginModel.Username)" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <InputText id="password" class="form-control" type="password" @bind-Value="loginModel.Password" />
            <ValidationMessage For="@(() => loginModel.Password)" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Login</button>
    </EditForm>
    @if (loginSuccess == -1)
    {
        <br />
        <div class="alert alert-danger" role="alert">
            Invalid username or password. Please try again.
        </div>
    }
    <div class="text-center">
        <p>Don't have an account? <NavLink href="/signup">Register</NavLink></p>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new LoginModel();
    private UserModel user = new UserModel();
    private int loginSuccess = 0;


    protected override async Task OnInitializedAsync()
    {
        if (UserLogin.User != null && !string.IsNullOrEmpty(UserLogin.User.username))
        {
            NavigationManager.NavigateTo("/UserProfile");
        }
    }
    
    private async Task HandleLogin()
    {
        user.username = loginModel.Username;
        user.password = loginModel.Password;

        var (loginResult, errorMessage) = await _db.UserLogin(user);

        if (user != null)
        {
            loginSuccess = 1;
            UserLogin.User = loginResult;   //Use the loginResult which is the userModel part of the tuple
            NavigationManager.NavigateTo("/UserProfile");
        }
        else
        {
            loginSuccess = -1;
        }
        user = new UserModel();
    }
    

    public class LoginModel
    {
        [Required]
        [EmailAddress]
        public string Username { get; set; }

        [Required]
        [DataType(DataType.Password)]
        public string Password { get; set; }
    }

}

<style>
    .login-avatar{
        display: block;
        margin-left: auto;
        margin-right: auto;
        height: 30%;
        width: 30%;
    }
</style>